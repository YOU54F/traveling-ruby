#!/bin/bash
set -e
CXX=(/usr/bin/c++)
ARGS=()
REGEX='(^| )-c( |$)'

if [[ "$RUNTIME_DIR" != "" && -e "$RUNTIME_DIR/bin/ccache" ]]; then
	CXX=("$RUNTIME_DIR/bin/ccache" /usr/bin/c++)
fi
if [[ "$DEAD_STRIP" != "" ]] && $DEAD_STRIP; then
	ARGS+=(-Wl,-dead_strip)
fi
if [[ "$@" =~ $REGEX ]]; then
	if [[ "$RUNTIME_DIR" != "" ]]; then
		ARGS+=("-I$RUNTIME_DIR/include")
	fi
	exec "${CXX[@]}" "${ARGS[@]}" "$@"
else
	if [[ "$RUNTIME_DIR" != "" && ! "$@" =~ "yjit.a" ]]; then
		ARGS+=(-rpath "$RUNTIME_DIR/lib" "-L$RUNTIME_DIR/lib")
	fi
	if [[ "$RUNTIME_DIR" != "" && ! "$@" =~ "yjit.a" ]]; then
		EXTRA_ARGS+=("-Wl,-headerpad_max_install_names" -rpath "@executable_path/../lib" -rpath "@loader_path")
	fi
	exec "${CXX[@]}" \
		"${EXTRA_ARGS[@]}" "${ARGS[@]}" "$@"
fi
